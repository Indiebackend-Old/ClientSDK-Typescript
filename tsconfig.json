{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,

		/* Strict Type-Checking Options */
		"strict": true,
		"esModuleInterop": true,
		"strictPropertyInitialization": false,

		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["./test", "./dist"]
}
